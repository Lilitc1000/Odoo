<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">list,form,kanban</field>
    <field name="context">{'search_default_available': True}</field>
  </record>

  <record id="advertisement_kanban_view" model="ir.ui.view">
    <field name="name">advertisement.kanban.view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <kanban default_group_by="property_type" records_draggable="0" groups_draggable="0">
        <field name="state" />
        <templates>
          <t t-name="card">
            <div class="oe_kanban_global_click">
              <b>
                <field name="name" />
              </b>
              <div> Expected Price: <field name="expected_price" />
              </div>
              <t t-if="record.state.raw_value === 'offer_received'">
                <div> Best Price: <field name="best_price" />
                </div>
              </t>
              <t t-if="record.state.raw_value === 'offer_accepted'">
                <div> Selling Price: <field name="selling_price" />
                </div>
              </t>
              <div> State: <field name="state" />
              </div>
              <field name="tags" widget="many2many_tags" options="{'color_field': 'color'}" />
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="estate_property_list_view" model="ir.ui.view">
    <field name="name">estate.property.list.view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <list string="Properties"
        decoration-success="state=='offer_received' or state=='offer_accepted'"
        decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
        <field name="name" />
        <field name="property_type" />
        <field name="postcode" />
        <field name="tags" widget="many2many_tags" options="{'color_field': 'color'}" />
        <field name="bedrooms" />
        <field name="living_area" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="date_availability" optional="hide" />
        <field name="state" invisible="1" />
      </list>
    </field>
  </record>

  <record id="estate_property_form_view" model="ir.ui.view">
    <field name="name">estate.property.form.view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Property Detail">
        <header>
          <button name="action_sold_property" type="object" string="Sold" class="oe_highlight"
            invisible="state == 'sold' or state == 'cancel'" />
          <button name="action_cancel_property" type="object" string="Cancel"
            invisible="state == 'sold' or state == 'cancel'" />
          <field name="state" widget="statusbar"
            statusbar_visible="new,offer_received,offer_accepted,sold" />
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name" nolabel="1" placeholder="Property Name" />
            </h1>
          </div>
          <field name="tags" widget="many2many_tags" placeholder="Tags"
            options="{'color_field': 'color'}" />
          <group col="2">
            <group>
              <field name="property_type" />
              <field name="postcode" />
              <field name="date_availability" />
            </group>
            <group>
              <field name="expected_price" />
              <field name="best_price" />
              <field name="selling_price" />
            </group>
          </group>
          <notebook>
            <page string="Description">
              <group>
                <field name="description" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area(sqm)" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" string="Garden Area(sqm)"
                  invisible="garden == False" />
                <field name="garden_orientation" invisible="garden == False" />
                <field name="total_area" />
                <field name="state" />
                <field name="active" invisible="1" />
              </group>
            </page>
            <page string="Offers">
              <field name="offers"
                readonly="state == 'sold' or state == 'cancel' or state == 'offer_accepted'" />
            </page>
            <page string="Other Infos">
              <group>
                <field name="seller" />
                <field name="buyer" />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="estate_property_search_view" model="ir.ui.view">
    <field name="name">estate.property.search.view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="postcode" />
        <field name="expected_price" />
        <field name="bedrooms" />
        <field name="living_area"
          filter_domain="['living_area', '>=', self]" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="date_availability" />
        <filter string="Available" name="available"
          domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]" />
        <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}" />
      </search>
    </field>
  </record>
</odoo>